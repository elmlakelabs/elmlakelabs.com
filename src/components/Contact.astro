<section class="py-24 px-4 md:px-8 text-center relative">
  <!-- Top line -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-20 bg-gradient-to-b from-transparent to-[var(--border-medium)]"></div>

  <div class="max-w-[600px] mx-auto will-animate">
    <h2 class="heading-md mb-4">Ready to Transform Your Operation?</h2>
    <p class="text-[var(--text-secondary)] mb-10">Get in touch with our precision agriculture specialists</p>

    <div class="flex flex-col sm:flex-row justify-center gap-4 flex-wrap">
      <a href="mailto:info@elmlakelabs.com" class="flex items-center justify-center gap-3 px-6 py-4 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-lg text-[var(--text-secondary)] hover:border-[var(--accent-primary)] hover:text-[var(--text-primary)] hover:-translate-y-0.5 transition-all">
        <svg class="text-[var(--accent-primary)]" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="2" y="4" width="20" height="16" rx="2"/>
          <path d="M22 6l-10 7L2 6"/>
        </svg>
        <span>info@elmlakelabs.com</span>
      </a>

      <a href="https://www.facebook.com/elmlakelabs" target="_blank" class="flex items-center justify-center gap-3 px-6 py-4 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-lg text-[var(--text-secondary)] hover:border-[var(--accent-primary)] hover:text-[var(--text-primary)] hover:-translate-y-0.5 transition-all">
        <svg class="text-[var(--accent-primary)]" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
        </svg>
        <span>Facebook</span>
      </a>

      <a href="https://www.youtube.com/@ElmLakeLabs" target="_blank" class="flex items-center justify-center gap-3 px-6 py-4 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-lg text-[var(--text-secondary)] hover:border-[var(--accent-primary)] hover:text-[var(--text-primary)] hover:-translate-y-0.5 transition-all">
        <svg class="text-[var(--accent-primary)]" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.33z"/>
          <polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/>
        </svg>
        <span>YouTube</span>
      </a>
    </div>
  </div>
</section>
