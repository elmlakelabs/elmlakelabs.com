---
const featuredProduct = {
  badge: 'Best Seller',
  category: 'Auto-Steer System',
  name: 'FJD AT2',
  description: 'Advanced auto-steering with centimeter-level accuracy. Compatible with most tractors and implements. Easy installation and intuitive operation.',
  specs: ['Â±1in Pass-to-Pass', 'RTK/CORS Ready', 'Universal Mount'],
  price: '$7,199',
  image: '/images/products/at2-autosteer.png'
};

const products = [
  {
    category: 'Land Leveling',
    name: 'FJD AL01 3D System',
    description: 'Precision 3D land leveling for perfect field grades.',
    price: '$6,799',
    image: '/images/products/al01-land-leveling.png'
  },
  {
    category: 'RTK Rover',
    name: 'FJD Trion V1t',
    description: 'Professional RTK rover for surveying and mapping.',
    price: '$4,249',
    image: '/images/products/trion-v1t-rover.png'
  },
  {
    category: 'Dozer System',
    name: 'FJD H39 3D',
    description: 'Complete 3D machine control for dozers.',
    price: 'From $29,999',
    image: '/images/products/h39-dozer.png'
  }
];
---

<section id="products" class="py-24 px-4 md:px-8 bg-[var(--bg-secondary)] relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 molecular-bg opacity-30"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-[var(--brand-purple)] rounded-full blur-[200px] opacity-5"></div>

  <div class="relative max-w-[1400px] mx-auto">
    <!-- FJD Partner Banner - Large & Prominent -->
    <div class="will-animate mb-20 relative group">
      <!-- Outer glow effect -->
      <div class="absolute -inset-1 bg-gradient-to-r from-[#F5B800]/20 via-[#F5B800]/5 to-[#F5B800]/20 rounded-[2rem] blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>

      <div class="relative p-10 md:p-14 bg-[var(--bg-card)] border border-[var(--border-subtle)] group-hover:border-[#F5B800]/20 rounded-3xl overflow-hidden transition-colors duration-500">
        <!-- Diagonal accent stripe -->
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-gradient-to-bl from-[#F5B800]/8 via-[#F5B800]/3 to-transparent -translate-y-1/2 translate-x-1/4"></div>

        <!-- Grid pattern overlay -->
        <div class="absolute inset-0 opacity-[0.03]" style="background-image: linear-gradient(#F5B800 1px, transparent 1px), linear-gradient(90deg, #F5B800 1px, transparent 1px); background-size: 40px 40px;"></div>

        <div class="relative grid grid-cols-1 lg:grid-cols-[auto_1fr] gap-10 lg:gap-16 items-center">
          <!-- Left: Logo lockup -->
          <div class="flex flex-col items-center lg:items-start">
            <!-- FJD Shield logomark -->
            <div class="relative mb-6">
              <div class="absolute -inset-4 bg-[#F5B800]/10 rounded-2xl blur-2xl"></div>
              <div class="relative w-24 h-24 md:w-32 md:h-32 flex items-center justify-center bg-gradient-to-br from-[var(--bg-tertiary)] to-[var(--bg-primary)] rounded-2xl border border-[#F5B800]/30 shadow-2xl shadow-[#F5B800]/10">
                <img
                  src="/images/fjd/logomark-yellow.png"
                  alt="FJDynamics"
                  class="w-14 md:w-20 h-auto"
                />
              </div>
            </div>

            <!-- Logo wordmark -->
            <img
              src="/images/fjd/logo-horizontal-white.png"
              alt="FJDynamics"
              class="h-8 md:h-10 w-auto opacity-90"
            />

            <!-- Authorized badge -->
            <div class="mt-4 inline-flex items-center gap-2 px-4 py-2 bg-[#F5B800]/10 border border-[#F5B800]/20 rounded-full">
              <div class="w-2 h-2 bg-[#F5B800] rounded-full animate-pulse"></div>
              <span class="text-xs text-[#F5B800] uppercase tracking-[0.15em] font-semibold">Authorized Dealer</span>
            </div>
          </div>

          <!-- Right: Content -->
          <div class="text-center lg:text-left">
            <h3 class="font-display text-2xl md:text-3xl lg:text-4xl mb-4">
              Premium <span class="text-[#F5B800]">Precision Agriculture</span> Technology
            </h3>
            <p class="text-[var(--text-secondary)] max-w-xl mb-8 leading-relaxed">
              As an authorized FJDynamics dealer, we bring you industry-leading auto-steer systems,
              land leveling solutions, and RTK technology backed by expert local support.
            </p>

            <!-- Feature grid -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
              <div class="flex items-center gap-3 p-4 bg-[var(--bg-primary)]/50 rounded-xl border border-[var(--border-subtle)]">
                <div class="w-10 h-10 flex items-center justify-center bg-[#F5B800]/10 rounded-lg">
                  <svg class="text-[#F5B800]" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                </div>
                <span class="text-sm text-[var(--text-primary)]">Factory Certified</span>
              </div>
              <div class="flex items-center gap-3 p-4 bg-[var(--bg-primary)]/50 rounded-xl border border-[var(--border-subtle)]">
                <div class="w-10 h-10 flex items-center justify-center bg-[#F5B800]/10 rounded-lg">
                  <svg class="text-[#F5B800]" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  </svg>
                </div>
                <span class="text-sm text-[var(--text-primary)]">Full Warranty</span>
              </div>
              <div class="flex items-center gap-3 p-4 bg-[var(--bg-primary)]/50 rounded-xl border border-[var(--border-subtle)]">
                <div class="w-10 h-10 flex items-center justify-center bg-[#F5B800]/10 rounded-lg">
                  <svg class="text-[#F5B800]" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                  </svg>
                </div>
                <span class="text-sm text-[var(--text-primary)]">Local Support</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center mb-16">
      <span class="section-tag">Featured Products</span>
      <h2 class="section-title">Precision Equipment</h2>
      <p class="mt-4 text-[var(--text-secondary)] max-w-[500px] mx-auto">
        Cutting-edge FJD agricultural technology for the modern farm
      </p>
    </div>

    <!-- Featured Product -->
    <div class="will-animate grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 p-8 lg:p-12 bg-gradient-to-br from-[var(--bg-card)] to-[var(--bg-tertiary)] border border-[var(--border-subtle)] rounded-2xl mb-8 relative overflow-hidden group">
      <!-- Gradient border on hover -->
      <div class="absolute inset-0 rounded-2xl p-px bg-gradient-to-br from-[var(--brand-magenta)]/30 via-[var(--brand-purple)]/20 to-[var(--brand-blue)]/30 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>

      <!-- Badge -->
      <span class="absolute top-6 left-6 px-3 py-1.5 bg-gradient-to-r from-[var(--brand-magenta)] to-[var(--brand-purple)] text-white text-xs font-semibold uppercase tracking-wider rounded-full">
        {featuredProduct.badge}
      </span>

      <!-- Product Image -->
      <div class="flex items-center justify-center p-8 bg-gradient-to-br from-white/[0.02] to-white/[0.05] rounded-xl">
        <img
          src={featuredProduct.image}
          alt={featuredProduct.name}
          class="w-full max-w-[400px] h-auto object-contain drop-shadow-2xl transition-transform duration-500 group-hover:scale-105"
        />
      </div>

      <!-- Product Info -->
      <div class="flex flex-col justify-center">
        <span class="text-xs text-[var(--brand-purple)] uppercase tracking-widest mb-2">{featuredProduct.category}</span>
        <h3 class="font-display text-4xl mb-4">{featuredProduct.name}</h3>
        <p class="text-[var(--text-secondary)] leading-relaxed mb-6">{featuredProduct.description}</p>

        <div class="flex flex-wrap gap-2 mb-8">
          {featuredProduct.specs.map(spec => (
            <span class="px-4 py-2 bg-[var(--bg-primary)]/50 border border-[var(--border-subtle)] rounded-lg text-xs text-[var(--text-secondary)]">
              {spec}
            </span>
          ))}
        </div>

        <div class="flex items-center justify-between gap-4 pt-6 border-t border-[var(--border-subtle)]">
          <span class="font-display text-3xl gradient-text">{featuredProduct.price}</span>
          <a href="https://store.elmlakelabs.com" class="btn btn-primary btn-sm" target="_blank">
            Shop Now
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 17L17 7M17 7H7M17 7V17"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {products.map((product, index) => (
        <div class="will-animate card p-6 group" style={`transition-delay: ${(index + 1) * 100}ms`}>
          <!-- Product Image -->
          <div class="flex items-center justify-center p-6 bg-gradient-to-br from-white/[0.02] to-white/[0.05] rounded-xl mb-5 overflow-hidden">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-48 object-contain transition-transform duration-500 group-hover:scale-110"
            />
          </div>

          <span class="text-xs text-[var(--brand-purple)] uppercase tracking-widest">{product.category}</span>
          <h3 class="font-display text-xl mt-1 mb-2">{product.name}</h3>
          <p class="text-sm text-[var(--text-secondary)] mb-4">{product.description}</p>

          <div class="flex items-center justify-between pt-4 border-t border-[var(--border-subtle)]">
            <span class="font-display text-lg gradient-text">{product.price}</span>
            <a href="https://store.elmlakelabs.com" class="text-sm text-[var(--brand-magenta)] hover:text-[var(--brand-purple)] transition-colors flex items-center gap-1" target="_blank">
              View
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a href="https://store.elmlakelabs.com" class="btn btn-outline" target="_blank">
        Browse All Products
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>
  </div>
</section>
