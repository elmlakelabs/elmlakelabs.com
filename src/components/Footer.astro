<footer class="py-16 px-4 md:px-8 bg-[var(--bg-secondary)] border-t border-[var(--border-subtle)] relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 molecular-bg opacity-10"></div>

  <div class="relative max-w-[1400px] mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_2fr] gap-12 pb-12 border-b border-[var(--border-subtle)]">
      <!-- Brand -->
      <div>
        <a href="/" class="inline-block mb-4">
          <img
            src="/images/logo-white.png"
            alt="Elm Lake Labs"
            class="h-10 w-auto"
          />
        </a>
        <p class="text-sm text-[var(--text-muted)] max-w-[280px] leading-relaxed">
          Precision agriculture technology for the modern farm. Helping farmers unlock their full potential.
        </p>
      </div>

      <!-- Links -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
        <div>
          <h4 class="font-body font-semibold text-sm text-[var(--text-primary)] mb-4">Products</h4>
          <a href="https://store.elmlakelabs.com" target="_blank" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-magenta)] transition-colors">Auto-Steer Systems</a>
          <a href="https://store.elmlakelabs.com" target="_blank" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-magenta)] transition-colors">Land Leveling</a>
          <a href="https://store.elmlakelabs.com" target="_blank" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-magenta)] transition-colors">RTK Rovers</a>
          <a href="https://store.elmlakelabs.com" target="_blank" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-magenta)] transition-colors">Accessories</a>
        </div>
        <div>
          <h4 class="font-body font-semibold text-sm text-[var(--text-primary)] mb-4">Resources</h4>
          <a href="#" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-purple)] transition-colors">Documentation</a>
          <a href="#" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-purple)] transition-colors">Support</a>
          <a href="#" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-purple)] transition-colors">FAQs</a>
        </div>
        <div>
          <h4 class="font-body font-semibold text-sm text-[var(--text-primary)] mb-4">Company</h4>
          <a href="#about" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-blue)] transition-colors">About Us</a>
          <a href="mailto:info@elmlakelabs.com" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-blue)] transition-colors">Contact</a>
          <a href="https://store.elmlakelabs.com" target="_blank" class="block text-sm text-[var(--text-muted)] py-1.5 hover:text-[var(--brand-blue)] transition-colors">Shop</a>
        </div>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 flex flex-col sm:flex-row justify-between items-center gap-4 text-xs text-[var(--text-muted)]">
      <p>&copy; 2024 Elm Lake Labs. All rights reserved.</p>
      <div class="flex gap-8">
        <a href="#" class="hover:text-[var(--text-secondary)] transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-[var(--text-secondary)] transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
