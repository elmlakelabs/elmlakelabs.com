---
const features = [
  { title: 'Nutrient Management', description: 'Track applications, generate reports, stay compliant' },
  { title: 'Pest & Disease Tracking', description: 'Monitor, record, and analyze pest pressure' },
  { title: 'Harvest Records', description: 'Detailed yield tracking by field and variety' },
  { title: 'Equipment Maintenance', description: 'Schedule service, track repairs, manage fleet' }
];
---

<section id="software" class="relative py-24 px-4 md:px-8 overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 molecular-bg opacity-40"></div>
  <div class="absolute -top-40 -right-40 w-[600px] h-[600px] bg-[var(--brand-purple)] rounded-full blur-[250px] opacity-10"></div>
  <div class="absolute -bottom-40 -left-40 w-[500px] h-[500px] bg-[var(--brand-blue)] rounded-full blur-[200px] opacity-10"></div>

  <div class="relative max-w-[1400px] mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
    <!-- Info -->
    <div class="will-animate text-center lg:text-left">
      <span class="section-tag">Farm Management</span>
      <div class="flex items-center gap-4 justify-center lg:justify-start mb-2">
        <img
          src="/images/blossom/logo-color-whitetext.svg"
          alt="Blossom Farm Management"
          class="h-14 md:h-16 w-auto"
        />
      </div>
      <p class="mt-4 text-lg text-[var(--text-secondary)] mb-10">
        Comprehensive farm management software built for modern agriculture.
      </p>

      <ul class="space-y-5 mb-10 max-w-md mx-auto lg:mx-0">
        {features.map((feature, i) => (
          <li class="flex gap-4 items-start text-left group">
            <div class="flex-shrink-0 mt-0.5 w-6 h-6 rounded-full flex items-center justify-center" style={`background: linear-gradient(135deg, ${i % 2 === 0 ? 'var(--brand-magenta)' : 'var(--brand-purple)'}, ${i % 2 === 0 ? 'var(--brand-purple)' : 'var(--brand-blue)'});`}>
              <svg class="text-white" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                <path d="M20 6L9 17l-5-5"/>
              </svg>
            </div>
            <div>
              <strong class="block text-[var(--text-primary)] group-hover:text-[var(--brand-magenta)] transition-colors">{feature.title}</strong>
              <span class="text-sm text-[var(--text-secondary)]">{feature.description}</span>
            </div>
          </li>
        ))}
      </ul>

      <a href="https://blossom.ag" target="_blank" class="btn btn-primary">
        Learn More
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M7 17L17 7M17 7H7M17 7V17"/>
        </svg>
      </a>
    </div>

    <!-- Device Screenshots -->
    <div class="will-animate relative">
      <!-- MacBook Screenshot -->
      <div class="relative z-10">
        <img
          src="/images/blossom/macbook.png"
          alt="Blossom on MacBook"
          class="w-full h-auto drop-shadow-2xl"
        />
      </div>

      <!-- iPhone Screenshot - positioned overlapping -->
      <div class="absolute -bottom-4 -right-4 md:bottom-0 md:right-0 w-[30%] z-20">
        <img
          src="/images/blossom/iphone.png"
          alt="Blossom on iPhone"
          class="w-full h-auto drop-shadow-2xl"
        />
      </div>
    </div>
  </div>
</section>
