---
const features = [
  { title: 'Nutrient Management', description: 'Track applications, generate reports, stay compliant' },
  { title: 'Pest & Disease Tracking', description: 'Monitor, record, and analyze pest pressure' },
  { title: 'Harvest Records', description: 'Detailed yield tracking by field and variety' },
  { title: 'Equipment Maintenance', description: 'Schedule service, track repairs, manage fleet' }
];
---

<section id="software" class="relative py-24 px-4 md:px-8 overflow-hidden">
  <!-- Background gradients -->
  <div class="absolute inset-0" style="background: radial-gradient(ellipse 100% 100% at 0% 50%, rgba(125, 216, 125, 0.08), transparent 50%), radial-gradient(ellipse 80% 80% at 100% 80%, rgba(78, 205, 196, 0.06), transparent 50%);"></div>

  <div class="relative max-w-[1400px] mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <!-- Info -->
    <div class="will-animate text-center lg:text-left lg:pr-12">
      <span class="section-tag">Farm Management</span>
      <h2 class="section-title flex items-center gap-4 justify-center lg:justify-start">
        <span class="text-4xl">ðŸŒ¸</span>
        Blossom
      </h2>
      <p class="mt-4 text-lg text-[var(--text-secondary)] mb-10">
        Comprehensive farm management software built for modern agriculture.
      </p>

      <ul class="space-y-4 mb-10 max-w-md mx-auto lg:mx-0">
        {features.map(feature => (
          <li class="flex gap-4 items-start text-left">
            <svg class="flex-shrink-0 mt-1 text-[var(--accent-primary)]" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 6L9 17l-5-5"/>
            </svg>
            <div>
              <strong class="block text-[var(--text-primary)]">{feature.title}</strong>
              <span class="text-sm text-[var(--text-secondary)]">{feature.description}</span>
            </div>
          </li>
        ))}
      </ul>

      <a href="#" class="btn btn-primary">
        Request Demo
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

    <!-- Preview Window -->
    <div class="will-animate" style="perspective: 1000px;">
      <div class="software-window bg-[var(--bg-card)] border border-[var(--border-medium)] rounded-xl overflow-hidden shadow-2xl transform lg:rotate-y-[-5deg] lg:rotate-x-[2deg] hover:rotate-y-0 hover:rotate-x-0 transition-transform duration-500">
        <!-- Window header -->
        <div class="flex items-center gap-4 px-4 py-3 bg-[var(--bg-tertiary)] border-b border-[var(--border-subtle)]">
          <div class="flex gap-1.5">
            <span class="w-3 h-3 rounded-full bg-[#ff5f57]"></span>
            <span class="w-3 h-3 rounded-full bg-[#febc2e]"></span>
            <span class="w-3 h-3 rounded-full bg-[#28c840]"></span>
          </div>
          <span class="text-xs text-[var(--text-muted)]">Blossom Dashboard</span>
        </div>

        <!-- Window content -->
        <div class="grid grid-cols-[140px_1fr] min-h-[280px]">
          <!-- Sidebar -->
          <div class="p-3 bg-[var(--bg-secondary)] border-r border-[var(--border-subtle)]">
            <div class="px-3 py-2 text-xs text-[var(--accent-primary)] bg-[var(--bg-card)] rounded mb-1">â—‰ Overview</div>
            <div class="px-3 py-2 text-xs text-[var(--text-muted)]">â—Ž Fields</div>
            <div class="px-3 py-2 text-xs text-[var(--text-muted)]">â—Ž Applications</div>
            <div class="px-3 py-2 text-xs text-[var(--text-muted)]">â—Ž Harvest</div>
            <div class="px-3 py-2 text-xs text-[var(--text-muted)]">â—Ž Reports</div>
          </div>

          <!-- Main -->
          <div class="p-4">
            <div class="flex justify-between items-center mb-4">
              <h4 class="font-body font-medium text-sm">Field Overview</h4>
              <span class="text-xs text-[var(--text-muted)] px-2 py-1 bg-[var(--bg-secondary)] rounded">Season 2024</span>
            </div>

            <div class="grid grid-cols-3 gap-2 mb-4">
              <div class="p-3 bg-[var(--bg-secondary)] rounded text-center">
                <span class="block font-display text-xl text-[var(--accent-primary)]">847</span>
                <span class="text-[10px] text-[var(--text-muted)] uppercase tracking-wider">Total Acres</span>
              </div>
              <div class="p-3 bg-[var(--bg-secondary)] rounded text-center">
                <span class="block font-display text-xl text-[var(--accent-primary)]">23</span>
                <span class="text-[10px] text-[var(--text-muted)] uppercase tracking-wider">Active Fields</span>
              </div>
              <div class="p-3 bg-[var(--bg-secondary)] rounded text-center">
                <span class="block font-display text-xl text-[var(--accent-primary)]">98%</span>
                <span class="text-[10px] text-[var(--text-muted)] uppercase tracking-wider">Data Complete</span>
              </div>
            </div>

            <div class="bg-[var(--bg-secondary)] rounded p-3 h-20">
              <div class="flex items-end justify-around h-full gap-2">
                <div class="flex-1 bg-gradient-to-t from-[var(--accent-primary)] to-[var(--accent-secondary)] rounded-t opacity-80" style="height: 65%;"></div>
                <div class="flex-1 bg-gradient-to-t from-[var(--accent-primary)] to-[var(--accent-secondary)] rounded-t opacity-80" style="height: 85%;"></div>
                <div class="flex-1 bg-gradient-to-t from-[var(--accent-primary)] to-[var(--accent-secondary)] rounded-t opacity-80" style="height: 45%;"></div>
                <div class="flex-1 bg-gradient-to-t from-[var(--accent-primary)] to-[var(--accent-secondary)] rounded-t opacity-80" style="height: 90%;"></div>
                <div class="flex-1 bg-gradient-to-t from-[var(--accent-primary)] to-[var(--accent-secondary)] rounded-t opacity-80" style="height: 70%;"></div>
                <div class="flex-1 bg-gradient-to-t from-[var(--accent-primary)] to-[var(--accent-secondary)] rounded-t opacity-80" style="height: 55%;"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media (min-width: 1024px) {
    .software-window {
      transform: rotateY(-5deg) rotateX(2deg);
    }
    .software-window:hover {
      transform: rotateY(0deg) rotateX(0deg);
    }
  }
</style>
