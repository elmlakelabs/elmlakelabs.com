<section class="relative min-h-screen flex items-center pt-20 pb-16 px-4 md:px-8 overflow-hidden">
  <!-- Grid background -->
  <div class="absolute inset-0 grid-pattern" style="mask-image: radial-gradient(ellipse 80% 60% at 50% 30%, black, transparent);"></div>

  <div class="relative z-10 max-w-[1400px] mx-auto w-full grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <!-- Content -->
    <div class="text-center lg:text-left">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--bg-card)] border border-[var(--border-subtle)] rounded-full text-xs text-[var(--text-secondary)] mb-8 animate-fade-in-up">
        <span class="w-2 h-2 bg-[var(--accent-primary)] rounded-full animate-pulse"></span>
        Precision Agriculture
      </div>

      <h1 class="heading-xl mb-8">
        <span class="block text-[var(--text-secondary)] animate-fade-in-up delay-100">The Future of</span>
        <span class="block animate-fade-in-up delay-200">Farming is <em class="italic text-[var(--accent-primary)]">Precise</em></span>
      </h1>

      <p class="max-w-[480px] mx-auto lg:mx-0 text-lg text-[var(--text-secondary)] leading-relaxed mb-10 animate-fade-in-up delay-300">
        State-of-the-art GPS guidance, auto-steer systems, and farm management
        software that help you unlock your full potential.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-fade-in-up delay-400">
        <a href="#products" class="btn btn-primary">
          Explore Products
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="#about" class="btn btn-secondary">Learn More</a>
      </div>
    </div>

    <!-- Visual -->
    <div class="relative animate-fade-in delay-500">
      <div class="relative aspect-[4/3]">
        <div class="absolute inset-0 bg-gradient-to-br from-[var(--bg-card)] to-[var(--bg-tertiary)] border border-[var(--border-subtle)] rounded-2xl overflow-hidden">
          <!-- Decorative background -->
          <div class="absolute inset-0" style="background: radial-gradient(circle at 30% 40%, rgba(125, 216, 125, 0.1), transparent 50%), radial-gradient(circle at 70% 60%, rgba(78, 205, 196, 0.08), transparent 50%);"></div>
          <!-- Grid overlay -->
          <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px); background-size: 20px 20px;"></div>

          <!-- Coordinates -->
          <div class="absolute bottom-4 left-4 flex flex-col gap-0.5 font-body text-xs text-[var(--accent-primary)] opacity-70 font-mono">
            <span>44.8113° N</span>
            <span>93.5196° W</span>
          </div>
        </div>

        <!-- Data points -->
        <div class="data-point" style="left: 20%; top: 30%;">
          <span class="point"></span>
          <span class="label">RTK Fix</span>
        </div>
        <div class="data-point" style="left: 70%; top: 45%; animation-delay: 0.5s;">
          <span class="point"></span>
          <span class="label">±1cm</span>
        </div>
        <div class="data-point" style="left: 45%; top: 75%; animation-delay: 1s;">
          <span class="point"></span>
          <span class="label">Active</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="hidden lg:flex absolute bottom-12 left-8 items-center gap-4 text-xs text-[var(--text-muted)] uppercase tracking-widest">
    <span>Scroll</span>
    <div class="w-16 h-px bg-[var(--border-medium)] relative overflow-hidden">
      <div class="absolute top-0 left-0 w-8 h-full bg-[var(--accent-primary)]" style="animation: scrollLine 2s ease-in-out infinite;"></div>
    </div>
  </div>
</section>

<style>
  .data-point {
    position: absolute;
    animation: dataPointFade 3s ease infinite;
  }

  .data-point .point {
    display: block;
    width: 12px;
    height: 12px;
    background: var(--accent-primary);
    border-radius: 50%;
    box-shadow: 0 0 20px var(--accent-primary);
  }

  .data-point .label {
    position: absolute;
    top: -24px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.7rem;
    color: var(--text-secondary);
    white-space: nowrap;
    background: var(--bg-card);
    padding: 2px 8px;
    border-radius: 4px;
  }

  @keyframes dataPointFade {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }

  @keyframes scrollLine {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(200%); }
  }
</style>
